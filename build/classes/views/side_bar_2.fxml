<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="TOP_CENTER" styleClass="side-bar-container" type="VBox" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Button alignment="TOP_LEFT" graphicTextGap="10.0" mnemonicParsing="false" onAction="#onDashboardMenuClick" prefHeight="25.0" prefWidth="236.0" styleClass="side-menu" text="Dashboard">
         <graphic>
            <FontAwesomeIconView fill="WHITE" glyphName="DASHBOARD" size="18" />
         </graphic>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" left="35.0" right="5.0" top="5.0" />
         </padding>
      </Button>
      <Accordion>
        <panes>
          <TitledPane graphicTextGap="10.0" styleClass="side-menu" text="Retail">
            <content>
                  <VBox spacing="10.0">
                     <children>
                        <Button alignment="TOP_LEFT" focusTraversable="false" mnemonicParsing="false" onAction="#onSellMenuClick" prefHeight="25.0" prefWidth="214.0" styleClass="side-menu-item" text="New Invoice">
                           <graphic>
                              <FontAwesomeIconView fill="WHITE" glyphName="CART_PLUS" size="14" />
                           </graphic></Button>
                        <Button alignment="TOP_LEFT" focusTraversable="false" mnemonicParsing="false" onAction="#onSellHistoryMenuClick" prefHeight="25.0" prefWidth="213.0" styleClass="side-menu-item" text="Invoices">
                           <graphic>
                              <FontAwesomeIconView fill="WHITE" glyphName="LIST" size="14" />
                           </graphic></Button>
                        <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onExpenditureClick" prefHeight="25.0" prefWidth="213.0" styleClass="side-menu-item" text="Expenditure" VBox.vgrow="ALWAYS">
                           <graphic>
                              <FontAwesomeIconView fill="WHITE" glyphName="MONEY" size="14" />
                           </graphic>
                        </Button>
                        <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onHeadingBtnClick" prefHeight="25.0" prefWidth="213.0" styleClass="side-menu-item" text="Heading'">
                           <graphic>
                              <FontAwesomeIconView fill="WHITE" glyphName="HEADER" size="14" />
                           </graphic>
                        </Button>
                     </children>
                  </VBox>
            </content>
               <graphic>
                  <FontAwesomeIconView fill="WHITE" glyphName="SHOPPING_BASKET" size="18" />
               </graphic>
          </TitledPane>
          <TitledPane graphicTextGap="10.0" styleClass="side-menu" text="Inventory">
            <content>
                  <VBox spacing="10.0">
                     <children>
                        <Button alignment="TOP_LEFT" focusTraversable="false" mnemonicParsing="false" onAction="#onProductMenuClick" prefHeight="25.0" prefWidth="210.0" styleClass="side-menu-item" text="Products">
                           <graphic>
                              <FontAwesomeIconView fill="WHITE" glyphName="TAGS" size="14" />
                           </graphic></Button>
                        <Button alignment="TOP_LEFT" focusTraversable="false" mnemonicParsing="false" onAction="#onCategoryMenuClick" prefHeight="25.0" prefWidth="209.0" styleClass="side-menu-item" text="Category">
                           <graphic>
                              <FontAwesomeIconView fill="WHITE" glyphName="TH" size="14" />
                           </graphic></Button>
                        <Button alignment="TOP_LEFT" focusTraversable="false" mnemonicParsing="false" onAction="#onSupplierMenuClick" prefHeight="25.0" prefWidth="210.0" styleClass="side-menu-item" text="Supplier">
                           <graphic>
                              <FontAwesomeIconView fill="WHITE" glyphName="USERS" size="14" />
                           </graphic></Button>
                        <Button alignment="TOP_LEFT" focusTraversable="false" mnemonicParsing="false" onAction="#onStockControlMenuClick" prefHeight="25.0" prefWidth="210.0" styleClass="side-menu-item" text="Stock Control">
                           <graphic>
                              <FontAwesomeIconView fill="WHITE" glyphName="GEAR" size="14" />
                           </graphic></Button>
                     </children>
                  </VBox>
            </content>
               <graphic>
                  <FontAwesomeIconView fill="WHITE" glyphName="TRUCK" size="18" />
               </graphic>
          </TitledPane>
          <TitledPane graphicTextGap="10.0" styleClass="side-menu" text="Customers">
            <content>
                  <VBox spacing="10.0">
                     <children>
                        <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onCustomerMenuClick" prefHeight="25.0" prefWidth="211.0" styleClass="side-menu-item" text="Customers">
                           <graphic>
                              <FontAwesomeIconView fill="WHITE" glyphName="USERS" size="14" />
                           </graphic></Button>
                        <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onPaymentHistoryClick" prefHeight="25.0" prefWidth="211.0" styleClass="side-menu-item" text="Payment history">
                           <graphic>
                              <FontAwesomeIconView fill="WHITE" glyphName="LIST_OL" size="14" />
                           </graphic></Button>
                     </children>
                  </VBox>
            </content>
               <graphic>
                  <FontAwesomeIconView fill="WHITE" glyphName="USERS" size="18" />
               </graphic>
          </TitledPane>
            <TitledPane graphicTextGap="10.0" styleClass="side-menu" text="Stores">
               <content>
                  <VBox spacing="10.0">
                     <children>
                        <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onStoreMenuClick" prefHeight="25.0" prefWidth="212.0" styleClass="side-menu-item" text="Stores">
                           <graphic>
                              <FontAwesomeIconView fill="WHITE" glyphName="LIST" size="14" />
                           </graphic></Button>
                        <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onStockTransferMenuClick" prefHeight="25.0" prefWidth="213.0" styleClass="side-menu-item" text="Stock transfer">
                           <graphic>
                              <FontAwesomeIconView fill="WHITE" glyphName="EXCHANGE" size="14" />
                           </graphic></Button>
                     </children>
                  </VBox>
               </content>
               <graphic>
                  <FontAwesomeIconView fill="WHITE" glyphName="SHOPPING_BAG" size="18" />
               </graphic>
            </TitledPane>
            <TitledPane graphicTextGap="10.0" styleClass="side-menu" text="Users">
               <content>
                  <VBox>
                     <children>
                        <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onUserMenuClick" prefHeight="25.0" prefWidth="207.0" styleClass="side-menu-item" text="List of users">
                           <graphic>
                              <FontAwesomeIconView fill="WHITE" glyphName="USERS" size="14" />
                           </graphic>
                        </Button>
                     </children>
                  </VBox>
               </content>
               <graphic>
                  <FontAwesomeIconView fill="WHITE" glyphName="USER" size="18" />
               </graphic>
            </TitledPane>
            <TitledPane graphicTextGap="10.0" styleClass="side-menu" text="Setting">
               <content>
                  <VBox>
                     <children>
                        <Button mnemonicParsing="false" onAction="#onSettingMenuClick" styleClass="side-menu-item" text="General" />
                        <Button mnemonicParsing="false" onAction="#onUnitSettingClick" styleClass="side-menu-item" text="Unit Setting" />
                     </children>
                  </VBox>
               </content>
               <graphic>
                  <FontAwesomeIconView fill="WHITE" glyphName="GEAR" size="18" />
               </graphic>
            </TitledPane>
        </panes>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Accordion>
   </children>
</fx:root>
